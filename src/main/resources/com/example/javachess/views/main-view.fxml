<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javachess.MainController" stylesheets="@../styles/main_style.css">
    <GridPane fx:id="chessBoard" prefWidth="640" prefHeight="640"/>
    <StackPane fx:id="overlayPane" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" visible="false" managed="false" styleClass="checkmate-overlay">
        <children>
            <VBox alignment="CENTER" spacing="16">
                <children>
                    <Label fx:id="checkmateLabel" text="" styleClass="checkmate-text"/>
                    <Button fx:id="restartButton" text="Recommencer" onAction="#onRestartClicked" styleClass="restart-button"/>
                </children>
            </VBox>
        </children>
    </StackPane>
</AnchorPane>
